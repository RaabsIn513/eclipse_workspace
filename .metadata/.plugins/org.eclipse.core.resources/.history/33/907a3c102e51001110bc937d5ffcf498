package school.work;

public class Select2 {

	public static void main(String[] args)
	{
		System.out.println("hell0");
		
		int[] myList = { 2, 3, 4, 3, 3 };
		
		System.out.println("Before:");
		print( myList );
		System.out.println("After:");
		System.out.println(fastmedian(myList));
	}
	
	public static void print( int[] a )
	{
		for( int i = 0; i < a.length; i++ )
		{
			if( i != a.length -1 )
				System.out.println( a[i] + ", ");
			else
				System.out.println( a[i] );
		}
	}
	
	public static int fastmedian(int[] a)
	{
		int t = 0;
		int y = 0;
		// swap a[1] with a[0];
		if (a[0]<a[1])
		    t=a[1]; a[1]=a[0]; a[0]=t;
		// swap a[3] with a[2];
		if (a[2]<a[3])
		    t=a[2]; a[2]=a[3]; a[3]=t;

		// swap a[0] with a[2] and swap a[1] with a[3]
		if (a[0] < a[2])
		{
			t=a[0]; a[0]=a[2]; a[2]=t;
		    t=a[1]; a[1]=a[3]; a[3]=t;
		}

		// swap a[1] with a[4]
		if (a[1] < a[4])
		      t=a[1]; a[1]=a[4]; a[4]=t;

		if (a[1]>a[2])
		{	    
			if (a[2]>a[4])
		        y=a[2];
		    else
		        y=a[4];
		}
		else if (a[1]>a[3])
		{        
			y=a[1];
		}
		else
			y=a[3];
		return y;
	}
}
